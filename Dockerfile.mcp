# Dockerfile for Airtable MCP Server v3.2.4
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install the airtable-mcp package from NPM
RUN npm install -g @rashidazarang/airtable-mcp@3.2.4

# Expose the MCP server port
EXPOSE 8010

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8010/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"

# Start the MCP server
CMD ["npx", "@rashidazarang/airtable-mcp"]